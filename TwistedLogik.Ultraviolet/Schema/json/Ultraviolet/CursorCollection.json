{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TwistedLogik.Ultraviolet.CursorCollection Schema",
  "type": "object",
  "properties": {
    "texture": { "type": "string" },
    "cursors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "area": { "$ref": "http://schema.twistedlogik.net/Ultraviolet/Rectangle.json" },
          "hotspot": { "$ref": "http://schema.twistedlogik.net/Ultraviolet/Point2.json" }
        }
      }
    }
  },
  "required": [ "texture", "cursors" ]
}