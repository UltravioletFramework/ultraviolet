<?xml version="1.0" encoding="utf-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">

  <xs:simpleType name="SpriteAnimationRepeat">
    <xs:restriction base="xs:string">
      <xs:enumeration value="None">
        <xs:annotation>
          <xs:documentation xml:lang="en">The animation does not repeat.</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
      <xs:enumeration value="Loop">
        <xs:annotation>
          <xs:documentation xml:lang="en">The animation loops continuously.</xs:documentation>
        </xs:annotation>
      </xs:enumeration>
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
