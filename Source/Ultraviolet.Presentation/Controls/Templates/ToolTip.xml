    <Grid Class="tooltip-component">

      <Rectangle Class="tooltip-background"/>
      <Border Class="tooltip-border">

        <ContentPresenter Name="PART_ContentPresenter" Class="tooltip-content"
                          HorizontalAlignment="{{HorizontalContentAlignment}}"
                          VerticalAlignment="{{VerticalContentAlignment}}"
                          Margin="{{Padding}}"/>

      </Border>

    </Grid>
  </View>
</ComponentTemplate>